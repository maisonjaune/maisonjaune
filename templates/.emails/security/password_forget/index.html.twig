{% extends 'mail.html.twig' %}

{% block body %}
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td align="left" style="font-size:24px; color:#006830; font-family:Helvetica, Arial, sans-serif;">
                {% trans %}Password forget{% endtrans %}
            </td>
        </tr>
        <tr>
            <td height="20"></td>
        </tr>
        <tr>
            <td align="left" class="font-bump" style="font-size:14px; color:#333333; font-family:Arial, Helvetica, sans-serif;">
                <p>
                    {% trans %}
                        Pour réinitialiser votre mot de passe, suivez ce lien.
                    {% endtrans %}
                    <a href="{{ url('app_security_password_conformation', { token: token.value }) }}">
