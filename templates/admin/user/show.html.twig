{% extends 'admin.html.twig' %}

{% block title %}{% trans %}User Show{% endtrans %}{% endblock %}

{% block body_title %}{% trans %}User Show{% endtrans %}{% endblock %}

{% block body_content %}
    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Civility{% endtrans %}</th>
                <td>{{ user.civility.value }}</td>
            </tr>
            <tr>
                <th>{% trans %}Firstname{% endtrans %}</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Lastname{% endtrans %}</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Email{% endtrans %}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{% trans %}IsActif{% endtrans %}</th>
                <td>{{ user.isActif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>{% trans %}IsMember{% endtrans %}</th>
                <td>{{ user.isMember ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>{% trans %}LastConnectionAt{% endtrans %}</th>
                <td>{{ user.lastConnectionAt ? user.lastConnectionAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}CreatedAt{% endtrans %}</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}UpdatedAt{% endtrans %}</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="action-bar">
        <a class="btn btn-primary" href="{{ path('app_admin_user_index') }}">
            {% trans %}Back to list{% endtrans %}
        </a>

        <a class="btn btn-primary" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">
            {% trans %}Edit{% endtrans %}
        </a>

        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
