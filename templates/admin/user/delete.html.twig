{% extends 'admin.html.twig' %}

{% block title %}{% trans %}Delete User{% endtrans %}{% endblock %}

{% block body %}
    <div class="alert alert-danger alert-dismiss">
        {% trans %}Are you sure you want to delete this item ?{% endtrans %}
    </div>
    <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn btn-danger">
            {% trans %}Delete{% endtrans %}
        </button>

        {% trans %}Or{% endtrans %}

        <a class="btn btn-primary" href="{{ path('app_admin_user_index') }}">
            {% trans %}Back to list{% endtrans %}
        </a>

        <a class="btn btn-primary" href="{{ path('app_admin_user_edit', { id: user.id }) }}">
            {% trans %}Back to edit{% endtrans %}
        </a>
    </form>
{% endblock %}
