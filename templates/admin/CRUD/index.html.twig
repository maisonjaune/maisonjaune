{% extends 'admin.html.twig' %}

{% block title %}{% trans %}User List{% endtrans %}{% endblock %}

{% block body_title %}{% trans %}User List{% endtrans %}{% endblock %}

{% set card_body_classes = 'p-0' %}

{% block body_navbar %}
    {{ component('admin-navbar-action', {
        form: form,
        url_new: path(router.getRouteName('new'))
    }) }}
{% endblock %}

{% block body_content %}
    <table class="table">
        <thead>
        <tr>
            {% for field in configurationList.getFields() %}
                <th>{{ field.label | trans }}</th>
            {% endfor %}
            <th class="col-action">{% trans %}Actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {% for field in configurationList.getFields() %}
                    <td>{{ propertyRenderer.render(entity, field) | raw }}</td>
                {% endfor %}
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            {% trans %}Action{% endtrans %}
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item"
                                   href="{{ path(router.getRouteName('show'), {'id': entity.id}) }}">
                                    {% trans %}Show{% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   href="{{ path(router.getRouteName('edit'), {'id': entity.id}) }}">
                                    {% trans %}Edit{% endtrans %}
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   href="{{ path(router.getRouteName('delete'), {'id': entity.id}) }}">
                                    {% trans %}Delete{% endtrans %}
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(entities) }}
{% endblock %}
